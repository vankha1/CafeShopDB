<%- include('includes/header.ejs') %>
</head>
<body>
    <%- include('includes/navigation.ejs')  %>    
    <main class="px-24 py-10">
        <form action="/dish/add-to-cart" method="post">
            <h2 class="text-black text-2xl font-bold mb-5">Thuc uong</h2>
            <div class="flex gap-20">
                <% if (drinkDishes.length > 0){ %>
                    <% drinkDishes.forEach(dish => { console.log(dish) %>
                        <div class="flex w-56 flex-col justify-between align-center gap-5">
                            <div class="image">
                                <img class="w-56 h-48" src="/images/157a66fb2e38fad05e8115b4d4c6cf68.png" alt="">
                            </div>
                            <label for="nameDish<%= dish.Maloaimon  %>"><%= dish.Ten  %></label>
                            <input type="hidden" id="nameDish<%= dish.Maloaimon  %>" name="nameDish" value="<%= dish.Ten  %>">
                            <div class="flex justify-between items-center self-stretch">
                                <% for(let i = 0; i < dish.Kichco.length; i++) { %>
                                    <input type="checkbox" id="size" name="<%= dish.Kichco[i] %><%= dish.Maloaimon  %>"><strong><%= dish.Kichco[i] %></strong>
                                    <input class="w-[30px] border-2 border-black" type="text" id="amount" name="<%= dish.Kichco[i] %><%= dish.Maloaimon  %>">&nbsp;&nbsp;&nbsp;
                                    <input type="hidden" id="price" name="<%= dish.Kichco[i] %><%= dish.Maloaimon %>" value="<%= dish.dongia[i] %>">
                                <% } %>
                            </div>
                        </div>
                        <% }) %>
                    <% } else { %>
                        <h3>KHONG CON DO AN NHE</h3>
                <% } %>
            </div>

            <hr class="my-5 border border-black">

            <h2 class="text-black text-2xl font-bold mb-5">Mon an nhe</h2>
            <div class="flex gap-20">
                <% if (anotherDishes.length > 0){ %>
                    <% anotherDishes.forEach(dish => { console.log(dish) %>
                        <div class="flex w-56 flex-col justify-between align-center gap-5">
                            <div class="image">
                                <img class="w-56 h-48" src="/images/157a66fb2e38fad05e8115b4d4c6cf68.png" alt="">
                            </div>
                            <label for="nameDish<%= dish.Maloaimon  %>"><%= dish.Ten  %></label>
                            <input type="hidden" id="nameDish<%= dish.Maloaimon  %>" name="nameDish" value="<%= dish.Ten  %>">
                            <div class="flex justify-between items-center self-stretch">
                                <% for(let i = 0; i < dish.Kichco.length; i++) { %>
                                    <input type="checkbox" id="size" name="<%= dish.Kichco[i] %><%= dish.Maloaimon  %>"><strong><%= dish.Kichco[i] %></strong>
                                    <input class="w-[30px] border-2 border-black" type="text" id="amount" name="<%= dish.Kichco[i] %><%= dish.Maloaimon  %>">&nbsp;&nbsp;&nbsp;
                                    <input type="hidden" id="price" name="<%= dish.Kichco[i] %><%= dish.Maloaimon %>" value="<%= dish.dongia[i] %>">
                                <% } %>
                            </div>
                        </div>
                        <% }) %>
                    <% } else { %>
                        <h3>KHONG CON DO AN NHE</h3>
                <% } %>
            </div>
            <div class="customer mt-20">
                <h2 class="mb-3">THONG TIN KHACH HANG</h2>
                <div class="mb-3">
                    <label for="nameCustomer">Ten</label><br>
                    <input class="p-1 border w-[500px]" type="text" id="nameCustomer" name="nameCustomer">
                </div>
                <div class="mb-3">
                    <label for="addressCustomer">Dia chi</label><br>
                    <input class="p-1 border w-[500px]" type="text" id="addressCustomer" name="addressCustomer">
                </div>
                <div class="mb-3">
                    <label for="cardNumber">So the</label><br>
                    <input class="p-1 border w-[500px]" type="text" id="cardNumber" name="cardNumber">
                </div>
                <div class="mb-3">
                    <label for="voucherId">Ma voucher</label><br>
                    <input class="p-1 border w-[500px]" type="text" id="voucherId" name="voucherId">
                </div>
                <div class="mb-3">
                    <label for="voucherSerial">So thu tu voucher</label><br>
                    <input class="p-1 border w-[500px]" type="text" id="voucherSerial" name="voucherSerial">
                </div>
            </div>
            <button type="submit" class="py-2 px-10 rounded-lg bg-purple-800 text-white text-center text-sm not-italic font-medium leading-5 float-right">Dat</button>
        </form>
        
    </main>
<%- include('includes/end.ejs') %>