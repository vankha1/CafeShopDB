<!doctype html>
<html lang="en">
    <head>
        <!-- Required meta tags -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <!-- Bootstrap CSS -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        <link rel="shortcut icon" type="image/jpg" href="/images/favicon.png">
        <title><%= pageTitle  %></title>
    </head>
    <body>
        <div class="container">
            <h1 class="mt-5 mb-5 text-center text-primary"><b><%= pageTitle  %></b></h1>
            <form action="/dish/admin/<%= nameBtn === 'Them' ? 'add' : 'update'  %>" method="post">
                <div class="form-group col-md-4 mb-4">
                    <label for="foodType">Loại món</label>
                    <% if (nameBtn === 'Them'){ %>
                        <input type="text" class="form-control" name="foodType" id="foodType" placeholder="1-20" value="<%= idMaloaimon %>" autocomplete="off" readonly>
                    <% } else { %>
                    <input type="text" class="form-control" name="foodType" id="foodType" value="<%= dish.Maloaimon %>" autocomplete="off" readonly="<%= nameBtn === 'Them' ? 'false' : 'true' %>" placeholder="1-20">
                    <% } %>
                </div>
                <div class="form-group col-md-4 mb-4">
                    <label for="size">Kích cỡ</label>
                    <% if (nameBtn === 'Them'){ %>
                        <input type="text" class="form-control" name="size" id="size" placeholder="L-M-XL">
                    <% } else { %>
                        <input type="text" class="form-control" name="size" id="size" value="<%= dish.Kichco %>" autocomplete="off" readonly="<%= nameBtn === 'Them' ? 'false' : 'true' %>" placeholder="L-M-XL">
                    <% } %>
                </div>
                <div class="form-group col-md-4 mb-4">
                    <label for="price">Đơn giá</label>
                    <% if (nameBtn === 'Them'){ %>
                        <input type="text" class="form-control" name="price" id="price">
                    <% } else { %>
                        <input type="text" class="form-control" name="price" id="price" value="<%= dish.Dongia %>" autocomplete="off">
                    <% } %>
                </div>
                <button type="submit" class="btn btn-primary"><%= nameBtn %></button>
            </form>
        </div>
    </body>
</html>