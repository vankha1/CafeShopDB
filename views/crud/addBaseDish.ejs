<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <title>
        <%= pageTitle %>
    </title>
</head>

<body>
    <div class="container">
        <h1 class="mt-5 mb-5 text-center text-primary"><b>THÊM MỘT LOẠI MÓN</b></h1>
        <form action="/dish/admin/add-prototype" method="post">
            <div class="form-group row justify-content-md-center">
                <div class="col-md-4 mb-4">
                    <label for="name">Tên món</label>
                    <input type="text" class="form-control" name="name" id="name">
                </div>
            </div>
            <div class="form-group row justify-content-md-center">
                <div class="col-md-4 mb-4">
                    <label for="type">Loại</label>
                    <select class="form-control" name="type" id="type">
                        <option value="Do an">Đồ ăn</option>
                        <option value="Do uong">Đồ uống</option>
                    </select>
                </div>
            </div>
            <div class="form-group row justify-content-md-center mb-4">
                <div class="col-md-2">
                    <label>Thời gian phục vụ</label>
                    <input type="time" class="form-control" name="startTime" id="startTime" placeholder="0">
                </div>
                <div class="col-md-2">
                    <label></label>
                    <input type="time" class="form-control" name="endTime" id="endTime" placeholder="0">
                </div>
            </div>
            <div class="form-group row justify-content-md-center mb-4">
                <div class="col-md-4">
                    <label for="description">Mô tả</label>
                    <textarea class="form-control" rows="3" type="text" name="description" id="description"></textarea>
                </div>
            </div>
            <div class="row">
                <div class="col-sm"></div>
                <div class="col-sm"></div>
                <div class="col-sm">
                    <button type="submit" class="btn btn-primary">Thêm</button>
                </div>
                <div class="col-sm"></div>
                <div class="col-sm"></div>
                <div class="col-sm"></div>
            </div>
        </form>
    </div>
</body>

</html>