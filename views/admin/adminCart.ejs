                <div>
                    <h3 class="text-black text-2xl not-italic font-bold mb-5"></h3>
                    <% if (orders?.length> 0) { %>
                        <table class="w-full">
                            <thead>
                                <th class="w-[5%]">STT</th>
                                <th class="w-[20%]">Số lượng món</th>
                                <th class="w-[30%]">Tổng giá gốc</th>
                                <th class="w-[20%]">Tổng giá sau ưu đãi</th>
                                <th class="w-[20%]">Khác</th>
                            </thead>
                            <tbody>
                                <% orders?.forEach(order=> { %>
                                    <tr class="h-[50px]">
                                        <th>
                                            <%= order.MaDonHang %>
                                        </th>
                                        <th>
                                            <%= order.SoLuongMon %>
                                        </th>
                                        <th>
                                            <%= order.TongGiaGoc %>
                                        </th>
                                        <th>
                                            <%= order.TongGiaSauUuDai %>
