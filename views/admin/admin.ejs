<%- include('../includes/header.ejs') %>
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
            <main class="px-24 py-10">
                <div class="flex gap-10">
                    <a href="/admin" class="text-black text-2xl font-bold mb-5">Món</a>
                    <a href="/admin/table" class="text-black text-2xl font-bold mb-5">Bàn</a>
                    <a href="/admin/cart" class="text-black text-2xl font-bold mb-5">Đơn hàng</a>
                    <a href="/admin/voucher" class="text-black text-2xl font-bold mb-5">Voucher</a>
                    <a href="/admin/staff" class="text-black text-2xl font-bold mb-5">Nhân viên</a>
                </div>

                <div>
                    <a href="/dish/admin/add"
                        class="inline-block rounded-full text-sm text-white text-center mr-5 bg-violet-800 no-underline px-[20px] py-[10px]">Thêm
                        món</a>
                </div>

                <hr class="my-5 border border-black">

                <div>
                    <h3 class="text-black text-2xl not-italic font-bold mb-5">Thức uống</h3>
                    <table class="w-50%">
                        <% if (drinkDishes.length===0) { %>
                            <span>Không còn thức uống</span>
                            <% } else { %>
                                <thead>
                                    <!-- <th class="w-[5%]"></th> -->
                                    <th class="w-[10%] text-violet-500">Tên</th>
                                    <th class="w-[10%] text-violet-500">Kích cỡ</th>
                                    <th class="w-[10%] text-violet-500">Giá</th>
                                    <th class="w-[10%] text-violet-500">Khác</th>
                                </thead>
                                <tbody>
                                    <% drinkDishes.forEach(dish=> { if (dish.current_status){ %>
                                        <tr>
                                            <!-- <th><input type="checkbox"></th> -->
                                            <th>
                                                <%= dish.Ten %>
                                            </th>
                                            <th>
                                                <%= dish.Kichco %>
                                            </th>
                                            <th>
                                                <%= dish.Dongia %>
                                            </th>
                                            <th class="flex justify-center items-center">
                                                <a href="/dish/admin/update/<%= dish.Maloaimon %><%= dish.Kichco %>"
                                                    class="inline-block rounded-full text-sm text-white text-center bg-violet-800 rounded no-underline px-[20px] py-[10px]">Sửa
                                                    món</a>
                                                <form
                                                    action="/dish/admin/delete/<%= dish.Maloaimon %><%= dish.Kichco %>"
                                                    method="post">
                                                    <button type="submit"
                                                        class="inline-block rounded-full text-sm text-white text-center mr bg-violet-800 rounded no-underline px-[20px] py-[10px]">Xóa
                                                        món</button>
                                                </form>
                                            </th>
                                        </tr>
                                        <% }}) %>
                                </tbody>
                                <% } %>
                    </table>
                </div>

                <hr class="my-5 border border-black">

                <div>
                    <h3 class="text-black text-2xl not-italic font-bold mb-5">Món ăn nhẹ</h3>
                    <table class="w-50%">
                        <% if (anotherDishes.length===0) { %>
                            <span>Không còn đồ ăn nhẹ</span>
                            <% } else { %>
                                <thead>
                                    <!-- <th class="w-[5%]"></th> -->
                                    <th class="w-[10%] text-violet-500">Tên</th>
                                    <th class="w-[10%] text-violet-500">Kích cỡ</th>
                                    <th class="w-[10%] text-violet-500">Giá</th>
                                    <th class="w-[10%] text-violet-500">Khác</th>
                                </thead>
                                <tbody>
                                    <% anotherDishes.forEach(dish=> { if (dish.current_status){ %>
                                        <tr>
                                            <!-- <th><input type="checkbox"></th> -->
                                            <th>
                                                <%= dish.Ten %>
                                            </th>
                                            <th>
                                                <%= dish.Kichco %>
                                            </th>
                                            <th>
                                                <%= dish.Dongia %>
                                            </th>
                                            <th class="flex justify-center items-center">
                                                <a href="/dish/admin/update/<%= dish.Maloaimon %><%= dish.Kichco %>"
                                                    class="inline-block rounded-full text-sm text-white text-center bg-violet-800 rounded no-underline px-[20px] py-[10px]">Sửa
                                                    món</a>
                                                <form
                                                    action="/dish/admin/delete/<%= dish.Maloaimon %><%= dish.Kichco %>"
                                                    method="post">
                                                    <button type="submit"
                                                        class="inline-block rounded-full text-sm text-white text-center mr bg-violet-800 rounded no-underline px-[20px] py-[10px]">Xóa
                                                        món</button>
                                                </form>
                                            </th>
                                        </tr>
                                        <% }}) %>
                                </tbody>
                                <% } %>
                    </table>
                </div>
            </main>
            <%- include('../includes/end.ejs') %>