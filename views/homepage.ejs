    <body>
        <%- include('includes/navigation.ejs') %>
            <main class="mx-auto px-10 py-10 space-y-8 flex flex-col max-w-screen-xl">
                <div class="w-full h-full flex justify-center items-center mb-5">
                    <img class="w-[769px] h-[400px]" src="/images/157a66fb2e38fad05e8115b4d4c6cf68.png" />
                    <div class="w-[511px] h-[400px] bg-neutral-500">
                        <div class="text-[white] text-sm font-normal leading-[21px]">
                            Cafe
                        </div>
                        <div class="text-white text-2xl font-bold leading-9">
                            Cafe
                        </div>
                        <div class="text-white text-sm font-bold leading-5">
