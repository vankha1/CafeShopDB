                            <div class="title text-black text-left font-bold">
                                <%= dishType.Ten %>
                            </div>
                            <span class="price">
                                <%= dishType.Mota %>
                            </span>
                            <div class="flex justify-between items-center self-stretch">
                                <span class="price"> Từ <strong>
                                        <%= dishType.Giobatdau %>
                                    </strong></span>
                                <span class="price"> Đến <strong>
                                        <%= dishType.Gioketthuc %>
